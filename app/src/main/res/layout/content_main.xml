<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.university.univation.MainActivity"
    android:background="@color/color_white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rounder"
        android:layout_width="match_parent"
        android:layout_marginTop="-200dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="-50dp"
        android:background="@drawable/big_rounder"
        android:layout_height="400dp"/>


    <ImageView
        android:id="@+id/cover"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/cover_white" />
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cover"
      >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            
            <android.support.v7.widget.CardView
                android:id="@+id/card_map"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="50dp"
                    app:srcCompat="@drawable/ic_place_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Map"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            </android.support.v7.widget.CardView>

         <android.support.v7.widget.CardView
             android:id="@+id/card_classes"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
             card_view:cardElevation="3dp"
                card_view:cardBackgroundColor="@color/color_white"
             card_view:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="50dp"
                    app:srcCompat="@drawable/ic_class_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Classes"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

            </LinearLayout>
         </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

         <android.support.v7.widget.CardView
             android:id="@+id/card_annauncements"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
             card_view:cardElevation="3dp"
                card_view:cardBackgroundColor="@color/color_white"
             card_view:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="50dp"
                    app:srcCompat="@drawable/ic_notifications_active_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Announcements"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

            </LinearLayout>
         </android.support.v7.widget.CardView>
         <android.support.v7.widget.CardView
             android:id="@+id/card_media"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
             card_view:cardElevation="3dp"
                card_view:cardBackgroundColor="@color/color_white"
             card_view:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="50dp"
                    app:srcCompat="@drawable/ic_menu_camera"
                    android:tint="@color/colorPrimary"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Media"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

            </LinearLayout>
         </android.support.v7.widget.CardView>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_calendar"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="50dp"
                        app:srcCompat="@drawable/ic_date_range_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Calendar"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_news"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="50dp"
                        app:srcCompat="@drawable/ic_receipt_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="News"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>

</android.support.constraint.ConstraintLayout>
